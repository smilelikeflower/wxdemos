/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.countView {
  display: flex;
  flex-direction: row;
  align-items:baseline;
}
.countView>.countbtn{
  display: inline-block;
  padding: 10px 10px;
  border:1px solid #ddd;
  margin: 0 10px;
  border-radius: 5px;
}
